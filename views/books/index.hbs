<h1>{{title}}</h1>
{{!-- TODO: add navigation to add a new project --}}
{{#if user}}
<a href="/books/add">Add a new book</a>
{{/if}}
{{!-- TODO: add a table to display projects from MongoDB --}}
<table class="table table-striped table-hover">
  <thead>
    <th>Name</th>
    <th>Arrived Date</th>
    <th>Genre</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
  {{#each dataset}}
    <tr>
      <td>{{this.name}}</Td>
      <td>{{toShortDate this.arrivedDate}}</Td>
      <td>{{this.genre}}</Td>
      <td>{{this.status}}</Td>
      <td>
        {{#if ../user}}
        <a href="/projects/edit/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/projects/delete/{{this._id}}" class="btn btn-danger" onclick="confirmDeletion()">Delete</a>
        {{/if}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>