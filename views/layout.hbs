{{! This is common layout available on all the webpages }}
<html>
  <head>
    {{! This is dynamic title variable, shows the title when the page is rendered. }}
    <title>{{title}}</title>
    {{! This is local CSS stylesheet }}
    <link rel="stylesheet" href="/stylesheets/style.css" />
    {{! This is local javascript style sheet }}
    <script src="/javascripts/scripts.js" defer></script>
    {{! THis is Bootstrap CSS }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
    {{! This is font-awesome api to fetch the different icon and fonts. }}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
    />
  </head>

  {{! This the body tag where all other pages contents are included when the page is render }}
  <body>
    {{! This is common nav-bar show on the top of each page }}
    <div class="container col-11">
      <nav class="navbar navbar-expand-sm bg-dark text-white navbar-dark">
        <ul class="navbar-nav">
          {{! This link navigates to home page }}
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          {{! This link navigates to book list }}
          <li class="nav-item">
            <a class="nav-link" href="/books">Books</a>
          </li>
          {{! This link only takes user to the genre if user is already logged In }}
          {{#if user}}
            <li class="nav-item">
              <a class="nav-link" href="/genres">Genre</a>
            </li>
          {{/if}}
          {{! This link navigates to the about page }}
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          {{! This link navigates to the contact page }}
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>

        {{! This the right side section of the nav-bar }}
        <ul class="navbar-nav ml-auto">
          {{! This will populate the logout link if the user is alreday logged in }}
          {{#if user}}
            <li class="nav-item active">
              <a class="nav-link" href="#">{{user.username}}</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/Logout">Logout</a>
            </li>
          {{else}}
            {{! If user is not logged in then it will populate login and Register page link for the user }}
            <li class="nav-item active">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/register">Register</a>
            </li>
          {{/if}}
        </ul>
      </nav>
      {{{body}}}
      {{! end of body tag }}
    </div>
    {{! This is Bootstrap Javascript }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js"
      integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2"
      crossorigin="anonymous"
    >
    </script>
  </body>
</html>